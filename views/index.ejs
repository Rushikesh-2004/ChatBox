<%- include("./includes/flash.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>mini Whatsapp</title>
    <link rel="stylesheet" href="style.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    
    <div class="centered-div">
        



    <h1>All chats</h1>
    <form method="GET" action="/chats/new">
        <button class="btn btn-outline-primary">New chat</button>
    </form>
    <br></br>
    
</body>
<div class="outerdiv">
   
    <%for (let chat of chats) { %>
        <div id="chat">
            <p>From: <i><%= chat.from %></i></p>
            <div id="msg">
                <p>  <%= chat.msg %></p>
                <form method="get" action="/chats/<%=chat._id %>/edit">
                    <button class="btn btn-light">edit</button>
                </form>
                <br/>

                <form method="post" action="/chats/<%=chat._id %>?_method=DELETE" >
                    <button class="btn btn-light">Delete</button>
               
            </div>
            
            <p>Received by: <i><%= chat.to %></i></p>
            <hr>
            <p><%= chat.created_at.toString().split(" ")[4] %></p><br/>
            <p><%= chat.created_at.toString().split(" ").slice(0,4).join(" ") %></p><br/>
            
        </div>
    </form>
        <br/><br/>
   <% } %>
</div>
</div>
    
</body>
</html>



    